.register.center.textcenter
	%form{:action=>"/register",:method=>"post"}
		%label{:for=>"username"} Username:
		%input{:type => "text", :name => "username", :id => "username"}
		%br
		%label{:for=>"password"} Password:
		%input{:type => "password", :name=> "password", :id=> "password"}
		%br
		%label{:for=>"password2"} Your password again:
		%input{:type => "password", :name=> "password2", :id=> "password2"}
		%br
		%label{:for=>"email"} Your email:
		%input{:type=>"text",:name=>"email",:id=>"email"}
		%br
		%label{:for=>"email2"} Your email again:
		%input{:type=>"text",:name=>"email2",:id=>"email2"}
		%br
		%label{:for=>"info"} A little bit about you (140 characters or less):
		%br
		%input.left{:type=>"text", :style=>"width: 250px", :name=>"info", :id=>"info"}
		%br
		%input{:type=>"submit",:value=>"Register"}
		
		
